<!DOCTYPE html>
	<html>
		<head>
			<% include ../partials/header.ejs %>
		</head>
		<body>
	<% include ../partials/nav.ejs %>
		 <div id="u4" class="ax_default heading_1">
        <div id="u4_div" class=""></div>
        <div id="u4_text" class="text ">
          <p><span>My Collections: My_ID</span></p>
        </div>
      </div>
			<form id="create_collections" action="/create_collection" name="form" method="post">
				<div class="col-lg-12">
				<div class="in-input">
					<input  class="form-control " id="col_name" type="text" Placeholder="New collection name" name="col_name" />
					<input  class="form-control " id="_id" type="hidden" value="<%= brand_id %>" name="_id" />
				</div>
				
				
				<div class="in-btn">
					<input class="btn btn-primary" type="submit" name="submit" value="+ Create Collection">
				</div>
				</div>
			</form>
			
			<div class="container">
				
				
					<table id = "example" class="table table-bordered">
					<thead>
			  <tr>
				<th>Collection</th>
				<th >Import</th>
				<th >Edit</th>
				<th >Export</th>
				<th >Upload</th>
				<th >Delete</th>
				<th >Duplicate</th>
			  </tr>
			</thead>
			<tbody>
			<% data.forEach(function(r, index) { %>
				
					<tr>
						<td><%= r.name %></td>
						<td><a href="/sheet/<%= r._id %>/<%= brand_id %>" class="btn-primary btn">Import</a></td>
						<td><a href="" class="btn-primary btn">Edit</a></td>
						<td><a href="" class="btn-primary btn">Export</a></td>
						<td><a href="/upload/<%= r._id %>" class="btn-primary btn">Upload</a></td>
						<td><a href="/delete_collection/<%= r._id %>/<%= brand_id %>" class="btn-primary btn">Delete</a></td>
						<td><a href="" class="btn-primary btn">Duplicate</a></td>
					</tr>
			
			<% }); %>
		  </tbody>
					</table>
				
				
			</div>
			
<script>
			
$(document).ready(function() {
			<!-- $('table').SetEditable(); -->
			$('#example').dataTable(); 
			
		
 $("#col_name").keypress(function(event){
		var ew = event.which;
		if(ew == 8)
			return true;
		if(48 <= ew && ew <= 57)
			return true;
		if(65 <= ew && ew <= 90)
			return true;
		if(97 <= ew && ew <= 122)
			return true;
		return false;
	});
	 $("#create_collections").validate({
		rules: {
			col_name: "required",
		},
		messages: {
			col_name: "Please enter collection name.",
		},
		submitHandler: function(form) {
			form.submit();
		}
	});
});
		
</script>
			
		</body>
	</html>


